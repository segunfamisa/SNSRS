<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/gutter_width"
    android:layout_marginTop="@dimen/gutter_width"
    android:layout_marginRight="@dimen/gutter_width"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/windowBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_view">

        <!-- Thermometer Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_thermometer"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <!-- prompt for temperature -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current temperature:"
                android:textSize="@dimen/textsize_small"
                android:textColor="@color/textColorPrimary"
                android:layout_centerHorizontal="true"
                />

            <!-- Temperature reading -->
            <TextView
                android:id="@+id/textview_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="35"
                android:gravity="center"
                android:textSize="32sp"
                />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>